<div style="width:80%;margin-left:20%;margin-top:30px">
  <h2>ジャンル一覧・追加(管理者)</2>
</div>

<div class="table table-borderless" style="width:90%;margin-left:20%;margin-top:80px">
  <%= form_with model: Genre.new, url: admin_genres_path,method: :post do |f| %>
  <td>ジャンル名</td>
  <%= f.text_field :name %>
  <%= f.submit '新規登録', class: "btn btn-success" %>
  <% end %>
</div>

<div class="row">
  <div class="col-6">
    <table class="table table-hover table-inverse" style="width:70%;margin-left:35%;margin-top:40px">
      <thead class="bg-secondary">
        <tr>
          <th>ジャンル</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
          <td><%= link_to '削除する', admin_genre_path(genre.id), method: :delete, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-6">
    <div class="form-group" style="width:70%;margin-left:30%;margin-top:40px">
      <div>
        <h2>ジャンル検索</h2>
      </div>
      <div>
        <ol>
        <li>キャンプ</li>
        <li>ソロキャンプ</li>
        <li>ファミリーキャンプ</li>
        <li>オートキャンプ</li>
        </ol>
      </div>
    </div>
  </div>
</div>

