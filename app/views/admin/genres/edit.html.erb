<div style="width:80%;margin-left:20%;margin-top:30px">
  <h2>ジャンル編集(管理者)</2>
</div>

<%= form_with model: Genre.new, url: admin_genre_path(@genre),method: :put do |f| %>
<div class="table table-borderless" style="width:90%;margin-left:20%;margin-top:60px">
  <div class="row">
    <div class="col-6">
      <div class="form-group">
        <div>
          <div>
            <h2>ジャンル名</h2>
          </div>
        </div>
        <div>
          <div style="margin-top:30px">
            <%= f.text_field :name %>
          </div>
        </div>
        <div>
          <div style="margin-top:30px">
          <%= f.submit '変更を保存', class: "btn btn-success" %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-6">
      <div class="form-group">
        <div>
          <ol>
            <div>
              <h2>ジャンル検索</h2>
            </div>
              <li>キャンプ</li>
              <li>ソロキャンプ</li>
              <li>ファミリーキャンプ</li>
              <li>オートキャンプ</li>
          </ol>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>