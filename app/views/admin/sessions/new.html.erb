<div style="width:50%;margin-left:40%;margin-top:30px">
  <h2>ログイン(管理者)</2>
</div>

<div class="table table-borderless" style="width:90%;margin-left:20%;margin-top:60px">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="pl-5">
      <div class="form-group row">
        <div class="col-sm-2 col-form-label">
          <%= f.label :"メールアドレス" %>
        </div>
        <div class="col-sm-10">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>
    </div>
    <div class="pl-5">
      <div class="form-group row">
        <div class="col-sm-2 col-form-label">
          <%= f.label :"パスワード" %>
        </div>
        <div class="col-sm-10">
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
      </div>
    </div>
    <div class="table table-borderless" style="width:70%;margin-left:20%;margin-top:20px">
      <%= f.submit "ログイン", class: "btn btn-info" %>
    </div>
  <% end %>
</div>