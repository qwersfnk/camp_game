<div style="width:80%;margin-left:20%;margin-top:30px">
  <h2>キャンプ新規登録(管理者)</2>
</div>

<%= form_with model: CampFacility.new, url: admin_camp_facilities_path do |f| %>
<div class="table table-borderless" style="width:60%;margin-left:20%;margin-top:50px">
  <div class="pl-5">
    <div class="form-group row">
      <div class="col-sm-5 col-form-label">
        <td>スポット選択画像</td>
      </div>
      <div class="col-sm-6">
        <%= f.file_field :image, accept: "image/*" %>
      </div>
    </div>
  </div>
  <div class="pl-5">
    <div class="form-group row">
      <div class="col-sm-5 col-form-label">
        <td>ジャンル</td>
      </div>
      <div class="col-sm-6">
        <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
      </div>
    </div>
  </div>
  <div class="pl-5">
    <div class="form-group row">
      <div class="col-sm-5 col-form-label">
        <td>スポット場所</td>
      </div>
      <div class="col-sm-6">
        <%= f.text_field :spot %>
      </div>
    </div>
  </div>
  <div class="pl-5">
    <div class="form-group row">
      <div class="col-sm-5 col-form-label">
        <td>大事なマナー</td>
      </div>
      <div class="col-sm-6">
        <%= f.text_field :manners %>
      </div>
    </div>
  </div>
  <div class="pl-5">
    <div class="form-group row">
      <div class="col-sm-5 col-form-label">

        <td>キャンプをやるときの注意事項</td>
      </div>
      <div class="col-sm-6">
        <%= f.text_field :notes %>
      </div>
    </div>
  </div>
  <div class="pl-5">
    <div class="form-group row">
      <div class="col-sm-5 col-form-label">
        <td>キャンプで楽しかったこと</td>
      </div>
      <div class="col-sm-6">
        <%= f.text_field :it_was_fun %>
      </div>
    </div>
  </div>
</div>

<div class="table table-borderless" style="width:60%;margin-left:48%;margin-top:40px">
  <%= f.submit '新規登録', class: "btn btn-success" %>
</div>
<% end %>