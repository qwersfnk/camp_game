<div style="width:80%;margin-left:20%;margin-top:30px">
  <h2>会員プロフィール編集(会員)</2>
</div>

<%= form_with model: User.new, url: user_path, method: "PATCH" do |f| %>
<div class="table table-borderless" style="width:40%;margin-left:20%;margin-top:50px">
  <div class="pl-5">
    <div class="form-group row">
      <div class="col-sm-5 col-form-label">
        <td>名前</td>
      </div>
      <div class="col-sm-6">
        <%= f.text_field :last_name %> <%= f.text_field :first_name %>
      </div>
    </div>
  </div>
  <div class="pl-5">
    <div class="form-group row">
      <div class="col-sm-5 col-form-label">
        <td>フリガナ</td>
      </div>
      <div class="col-sm-6">
        <%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %>
      </div>
    </div>
  </div>
  <div class="pl-5">
    <div class="form-group row">
      <div class="col-sm-5 col-form-label">
        <td>年齢</td>
      </div>
      <div class="col-sm-6">
        <%= f.text_field :age %>
      </div>
    </div>
  </div>
  <div class="pl-5">
    <div class="form-group row">
      <div class="col-sm-5 col-form-label">
        <td>性別</td>
      </div>
      <div class="col-sm-6">
        <%= f.label "男性" %>
        <%= f.radio_button :gender, :男性 %>
        <%= f.label "女性" %>
        <%= f.radio_button :gender, :女性 %>
      </div>
    </div>
  </div>
</div>

<div style="width:80%;margin-left:20%;margin-top:30px">
  <%= f.submit 'プロフィールを変更する', class: "btn btn-success"  %>
</div>
<% end %>