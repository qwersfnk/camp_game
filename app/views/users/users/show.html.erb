<div style="width:80%;margin-left:20%;margin-top:30px">
  <h2>会員プロフィール詳細画面(会員)</2>
</div>

<div style="width:80%;margin-left:20%;margin-top:90px">
  <div class="row">
    <div class="col-6">
      <div class="form-group">
        <table class="table table-bordered">
          <tbody>
            <tr>
              <td class="bg-secondary">名前</td>
              <td><%= @user.last_name %> <%= @user.first_name %></td>
            </tr>
            <tr>
              <td class="bg-secondary">フリガナ</td>
              <td><%= @user.last_name_kana %> <%= @user.first_name_kana %></td>
            </tr>
            <tr>
              <td class="bg-secondary">年齢</td>
              <td><%= @user.age %></td>
            </tr>
            <tr>
              <td class="bg-secondary">性別</td>
              <td><%= @user.gender %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div style="width:90%;margin-left:40%;margin-top:30px">
  <%= link_to 'プロフィールを編集', edit_user_path, class: "btn btn-success" %>
</div>